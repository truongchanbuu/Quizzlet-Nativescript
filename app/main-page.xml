<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:mdc="@nativescript-community/ui-material-bottomnavigationbar" navigatingTo="navigatingTo" loaded="onLoaded">
    <ActionBar title="Quizzlet Demo" icon="" />
    <StackLayout>
        <ListView height="100%" items="{{ getTopics() }}"  loaded="onLoaded" itemLoading="onItemLoading" itemTap="{{ onItemTap }}">
            <ListView.itemTemplate>
                <Label text="{{ name }}" textWrap="true" />
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
